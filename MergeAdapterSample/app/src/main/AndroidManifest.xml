<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.husaynhakeem.mergeadaptersample">

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DifferentViewHoldersActivity"
            android:label="@string/different_view_holders" />
        <activity
            android:name=".SameViewHoldersActivity"
            android:label="@string/same_view_holders" />
        <activity
            android:name=".ComplexViewHoldersActivity"
            android:label="@string/complex_view_holders" />
    </application>

</manifest>